# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/formfast

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here

# GROQ API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Tally API Configuration (for form generation)
TALLY_API_KEY=your_tally_api_key_here

# Snowflake Configuration (for data warehousing)
SNOWFLAKE_ACCOUNT=your_snowflake_account
SNOWFLAKE_USERNAME=your_snowflake_username
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_DATABASE=formfast_db
SNOWFLAKE_SCHEMA=public

# Filecoin Configuration (for decentralized storage)
FILECOIN_API_KEY=your_filecoin_api_key
FILECOIN_ENDPOINT=https://api.filecoin.io

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=10

# OCR Configuration
TESSERACT_LANG=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# Application Configuration
APP_NAME=FormFast
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@formfast.ai